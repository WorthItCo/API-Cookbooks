#!upstart
description "crawler <%= @site %> - <%= @instance %>"
respawn
start on starting crawler-<%= @application %>
stop on stopping crawler-<%= @application %>

env RACK_ENV=<%= @rack_env %>

chdir <%= @deploy[:deploy_to] %>/current

exec sudo -u deploy -E -- ruby <%= @deploy[:deploy_to] -%>/current/bin/crawl_site -s <%= @site -%> -b phantomjs -v >> /var/log/crawler/<%= @site %>-<%= @application %>-<%= @instance %>.log 2>&1
